<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the EditActivity. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/tvBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Personal Bio"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/tvCertficates"
        app:layout_constraintStart_toStartOf="@+id/tvCertficates"
        app:layout_constraintTop_toBottomOf="@+id/tvCertficates" />

    <EditText
        android:id="@+id/tvCertficates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Certificates Obtained"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/tvRegion"
        app:layout_constraintStart_toStartOf="@+id/tvRegion"
        app:layout_constraintTop_toBottomOf="@+id/tvRegion" />

    <EditText
        android:id="@+id/tvRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Preferred Reigon"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/tvSubjectsTaught"
        app:layout_constraintStart_toStartOf="@+id/tvSubjectsTaught"
        app:layout_constraintTop_toBottomOf="@+id/tvSubjectsTaught" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="215dp"
        android:layout_height="233dp"
        app:layout_constraintBottom_toTopOf="@+id/etName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/leaps_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Account Information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBio" />

    <EditText
        android:id="@+id/tvSubjectsTaught"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Subjects Taught"
        android:inputType="textPersonName"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@+id/tvExperience"
        app:layout_constraintStart_toStartOf="@+id/tvExperience"
        app:layout_constraintTop_toBottomOf="@+id/tvExperience"
        tools:layout_editor_absoluteY="365dp" />

    <EditText
        android:id="@+id/tvExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Years of Experience"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/tvSubjectsTaught"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.56" />

</androidx.constraintlayout.widget.ConstraintLayout>
